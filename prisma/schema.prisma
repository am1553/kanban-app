// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  emailaddress  String   @unique
  password  String
  boards    Board[]
}

model Board {
  id        String    @id @default(uuid())
  createdAt DateTime  @default(now())
  name      String   
  userID    String
  belongsTo User      @relation(fields: [userID], references: [id])
  columns   Columns[]
}

model Columns {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  name      String 
  color String 
  boardID   String
  belongsTo Board    @relation(fields: [boardID], references: [id])
  tasks Tasks[]
}

model Tasks {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  title String 
  description String
  columnID String
  belongsTo Columns @relation(fields: [columnID], references: [id])
  subtasks Subtask[]
}

model Subtask {
  id String @id @default(uuid())
  createdAt DateTime @default(now())
  title String 
  isComplete Boolean @default(false)
  taskID String
  belongsTo Tasks @relation(fields: [taskID], references: [id])
}